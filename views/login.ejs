<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login</title>
    <link rel="stylesheet" href="/styles.css">
    <style>
        /* Center the login form */
        .login-container {
            max-width: 400px;
            margin: 100px auto;
            padding: 20px;
            background-color: #1a1a1a; /* Darker background for the form box */
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.5);
            text-align: center; /* Center all text */
        }

        /* Style the form fields */
        .login-container input[type="text"],
        .login-container input[type="password"],
        .login-container button {
            width: 80%; /* Reduce width for better centering */
            padding: 10px;
            margin: 15px auto; /* Center the fields */
            display: block; /* Ensure inputs are treated as block elements */
            border: none;
            border-radius: 5px;
        }

        /* Input background and text color */
        .login-container input {
            background-color: #2c2c2c;
            color: #f0f0f0;
            text-align: center; /* Center text inside input boxes */
        }

        /* Style the submit button */
        .login-container button {
            background-color: #4caf50;
            color: white;
            cursor: pointer;
        }

        .login-container button:hover {
            background-color: #45a049;
        }
    </style>
</head>
<body>
    <%- include('header') %>

    <div class="login-container">
        <h2 style="color: #f0f0f0;">Login</h2>
        <form method="POST" action="/login">
            <input type="text" name="username" id="username" placeholder="Username" required>

            <input type="password" name="password" id="password" placeholder="Password" required>

            <button type="submit">Login</button>
        </form>
    </div>

    <%- include('footer') %>
</body>
</html>
